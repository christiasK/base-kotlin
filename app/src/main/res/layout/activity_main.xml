<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/clickMeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Me" />

    <Button
        android:id="@+id/writeLogBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log 남기기 버튼" />

    <Button
        android:id="@+id/toastBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자가 눌렀다고 인식 가능한 버튼" />


    <Button
        android:id="@+id/alertBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자에게 심각한 알림을 알려줍니다." />

    <EditText
        android:id="@+id/toastContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="토스트로 출력할 내용 적기"
        />

    <Button
        android:id="@+id/toastContentShowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력 문구 띄우기"/>


    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/textViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="아래의 Text View에 보여줄 내용"
        />

    <Button
        android:id="@+id/textViewContentShowBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력 문구 띄우기"/>

    <TextView
        android:id="@+id/editContentShowView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/helloMsgText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="인사 문구"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/msgShowBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인사문구 출력"
            />

    </LinearLayout>

</LinearLayout>